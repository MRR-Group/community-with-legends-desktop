<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Presentation.ViewModels"
             xmlns:domain="clr-namespace:Domain.Entities;assembly=Domain"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:iac="using:Avalonia.Xaml.Interactions.Custom"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="Presentation.Views.UsersPageView"
             x:DataType="vm:UsersPageViewModel">
    <Grid RowDefinitions="*" ColumnDefinitions="230,*,900,*,300">
        <Panel Grid.Column="2" Background="{ DynamicResource BackgroundColor}" Grid.Row="0">
            <StackPanel>
                <TextBlock Classes="title" TextAlignment="Center">Users</TextBlock>
                
                <StackPanel>
                    <Border
                        BorderBrush="{DynamicResource SecondaryColor}"
                        BorderThickness="0 0 0 2"
                        CornerRadius="0"
                        Padding="10 2"
                        Margin="0 0"
                    >
                        <Grid ColumnDefinitions="1*,2*,2*,2*,1*" Margin="0,0,0,5">
                            <TextBlock Text="ID" FontWeight="Bold"/>
                            <TextBlock Text="Email" TextAlignment="Center" Grid.Column="1" FontWeight="Bold"/>
                            <TextBlock Text="Name" Grid.Column="2" FontWeight="Bold"/>
                            <TextBlock Text="Modification date" Grid.Column="3" FontWeight="Bold"/>
                            <TextBlock Text="Options" Grid.Column="4" FontWeight="Bold" HorizontalAlignment="Right" Margin="0 0 5 0"/>
                        </Grid>
                    </Border>

                    <ItemsControl ItemsSource="{Binding Users}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="domain:User">
                                <Border
                                    BorderBrush="{DynamicResource SecondaryColor}"
                                    BorderThickness="0 0 0 2"
                                    CornerRadius="0"
                                    Padding="10 2"
                                    Margin="0 0"
                                >
                                    <Border.Styles>
                                        <Style Selector="ContentPresenter:nth-child(odd) Border">
                                            <Setter Property="Background" Value="{DynamicResource BackgroundLightColor}"/>
                                        </Style>
                                    </Border.Styles>
                                    
                                    <Grid ColumnDefinitions="1*,2*,2*,2*,1*" Margin="0,2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Id, Mode=OneWay}" VerticalAlignment="Center" />
                                        <TextBlock Text="{Binding Email.Value, Mode=OneWay}" VerticalAlignment="Center" Grid.Column="1" />
                                        <TextBlock Text="{Binding Name, Mode=OneWay}" VerticalAlignment="Center" Grid.Column="2" />
                                        <TextBlock Text="{Binding ModificationDate, Mode=OneWay}" VerticalAlignment="Center" Grid.Column="3" />
                                        <Button Content="Edit" Grid.Column="4" HorizontalAlignment="Right" Margin="0 0 5 0" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </Panel>
    </Grid>
</UserControl>
