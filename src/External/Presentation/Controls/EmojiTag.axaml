<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Presentation.Controls.EmojiTag">
    
            <Border Background="{DynamicResource PrimaryGradient}" CornerRadius="8" Padding="8">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Classes="xs " VerticalAlignment="Center" Text="{Binding Emoji, RelativeSource={RelativeSource FindAncestor, AncestorType=EmojiTag}}" />
                    <TextBlock Classes="xs2" VerticalAlignment="Center" Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType=EmojiTag}}" />
                </StackPanel>
            </Border>
</UserControl>
